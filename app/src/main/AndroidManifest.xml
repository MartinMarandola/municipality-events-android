<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ar.municipalityevents">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".view.MunicipalityEventsApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MunicipalityEvents">

        <activity
            android:name=".view.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MunicipalityEvents.NoActionBar" />
        <activity
            android:name=".view.CalendarActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MunicipalityEvents.NoActionBar" />
        <activity
            android:name=".view.ProfileEventActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MunicipalityEvents.NoActionBar" />
    </application>

</manifest>